<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nikit.bobin.geolocationtimer.MainActivity">

    <Button
        android:id="@+id/request_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_location"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp" />

    <Button
        android:id="@+id/update_saved_geo_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="57dp"
        app:layout_constraintTop_toBottomOf="@+id/geo_info_id" />

    <EditText
        android:id="@+id/geo_info_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="@string/id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="59dp"
        app:layout_constraintTop_toBottomOf="@+id/request_location_button"
        app:layout_constraintHorizontal_bias="0.503" />

    <Button
        android:id="@+id/start_watching_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:enabled="false"
        android:layout_marginTop="99dp"
        app:layout_constraintTop_toBottomOf="@+id/update_saved_geo_info"
        android:layout_marginLeft="55dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/end_watching_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End"
        android:enabled="false"
        android:layout_marginTop="99dp"
        app:layout_constraintTop_toBottomOf="@+id/update_saved_geo_info"
        android:layout_marginRight="48dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
